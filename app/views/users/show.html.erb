						<div class="card-stacked">
							<div class="card-content">
								<p><%= "#{meetup.date.strftime("%A, %B %d")} at #{meetup.location.name}" %></p>
							</div>
							<div class="card-action">
								<%= link_to 'View Details', group_meetup_path(group, meetup) %>
