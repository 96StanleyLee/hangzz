<div class="row">
	<div class="col s8">
		<h4>Login</h4>
		<br />
		<%= form_tag sessions_path do %>
			<div class="input-field ">
				<%= text_field_tag :email %>
				<%= label_tag :email %>
			</div>
			<div class="input-field ">
				<%= password_field_tag :password %>
				<%= label_tag :password %>
			</div>
			<%= submit_tag %>
		<% end %>
	</div>
	<div class="col s4">
	</div>
</div>