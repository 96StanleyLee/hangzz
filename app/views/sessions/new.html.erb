<div class="row">
	<div class="col s8">
		<h4>Login</h4>
		<br />
		<%= form_tag sessions_path do %>
			<div class="input-field ">
				<%= text_field_tag :email %>
				<%= label_tag :email %>
			</div>
			<div class="input-field ">
				<%= password_field_tag :password %>
				<%= label_tag :password %>
			</div>
			<button class="btn waves-effect waves-light" id="userUpdateButton" type="submit" name="action">Login</button>
		<% end %>
	</div>
	<div class="col s4">
	</div>
</div>